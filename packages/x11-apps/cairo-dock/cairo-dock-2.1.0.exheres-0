LAUNCHPAD_PROJECT="${PN}-core"
require launchpad
SUMMARY="A lightweight animated application launch bar for the desktop"
DESCRIPTION="
Cairo-Dock is a light and eye-candy dock to launch your programs easily.
It uses Cairo / OpenGL to render nice graphics (many in correlation with Compiz)
with hardware acceleration.
It's fully configurable and customisable and can be a taskbar too.
You can easily plug applets into it or in a desklet mode.
"
HOMEPAGE="http://www.cairo-dock.org"

LICENCES="GPL-2 GPL-3"
SLOT="0"
PLATFORMS="~x86"
MYOPTIONS=""

DEPENDENCIES="
    build:
        dev-util/intltool
        dev-util/pkg-config
        sys-devel/gettext
        x11-proto/xineramaproto
        x11-proto/xproto
    build+run:
        dev-libs/dbus-glib
        dev-libs/glib:2
        dev-libs/libxml2
        gnome-desktop/librsvg
        sys-apps/dbus
        x11-libs/cairo
        x11-libs/gtk+:2
        x11-libs/gtkglext
        x11-libs/libXcomposite
        x11-libs/libXext
        x11-libs/libXrender
        x11-libs/libXtst
        x11-libs/libXinerama
    suggestion:
        x11-plugins/cairo-dock-plugins
"

# Tests currently fail, need to be fixed ASAP
RESTRICT="test" 
BUGS_TO="oahong@gmail.com"

DEFAULT_SRC_CONFIGURE_PARAMS=( --enable-xextend --disable-glitz )

